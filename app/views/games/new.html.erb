<div class="container">
  <h1>New Game</h1>
  <ul>
    <% @letters.each do |c| %>
      <li class="card-white"> <%= c.upcase %> </li>
    <% end %>
  </ul>

  <form action="/score" method="post">
    <%= hidden_field_tag :authenticity_token, form_authenticity_token %>
    <%= hidden_field_tag :letters, @letters %>
    <input type="text" name="name" id="input" placeholder="do your best">
    <button type="submit" name="play" class="btn-blue">play</button>
  </form>
</div>
